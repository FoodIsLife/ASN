{
  "name": "Artist",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "strictObjectIDCoercion": true,
    "emailVerificationRequired": true
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "telephoneNumber": {
      "type": "string"
    },
    "country": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "genre": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "pricing": {
      "type": "string"
    },
    "profilePicture": {
      "type": "string"
    },
    "userType":{
      "type": "string"
    },
    "artistType":{
      "type": "string"
    },
    "categories":{
      "type": "string"
    },
    "experience":{
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "upcomingGigs": {
      "type": "hasMany",
      "model": "UpcomingGigs",
      "foreignKey": "artistId",
      "options": {
        "nestRemoting": true
      }
    },
    "artistGalleries": {
      "type": "hasMany",
      "model": "ArtistGallery",
      "foreignKey": "artistId",
      "options": {
        "nestRemoting": true
      }
    },
    "artistSoundClouds": {
      "type": "hasMany",
      "model": "ArtistSoundCloud",
      "foreignKey": "artistId",
      "options": {
        "nestRemoting": true
      }
    },
    "artistVideos": {
      "type": "hasMany",
      "model": "ArtistVideos",
      "foreignKey": "artistId",
      "options": {
        "nestRemoting": true
      }
    },
    "reviews": {
      "type": "hasMany",
      "model": "Reviews",
      "foreignKey": "artistId",
      "options": {
        "nestRemoting": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "EXECUTE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "updateAttributes",
        "deleteById"
      ]
    },
    {
      "property": "changePassword",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "accessType": "EXECUTE",
      "permission": "ALLOW"
    }, 
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
