extends ../layouts/layout

block content
  .row
    .col-md-12
      h1 Password Reset:
      form(role='form', action='#{redirectUrl}', method='post')
        .form-group
          label(for='password') New Password
          input.form-control(type='password', name='newPassword', placeholder='Password')
        .form-group
          label(for='confirmation') Confirm Password
          input.form-control(type='password', name='confirmation', placeholder='Confirm Password')
        button.btn.btn-default(type='submit') Reset Password
      br